<header class="header ">

      <div>
        {{>logo}}
      </div>


      <nav class="header_nav">
        <div class=" header_nav_right">
          {{>nav list=header}}
        </div>
      </nav>
    </header>

     {{#with main}}
    <div class="main">
      <div class="main_content">
        <img src="{{image}}" alt="Hero image" class="main_image">
        <div>
          <h1 class="main_title">{{heading}}</h1>
          <p class="main_text">{{descriotion}}</p>
        <a href="{{href}}" class="button main_button">{{button}}</a>
        </div>
      </div>
    </div>
    {{/with}}

    <main class="featured">
      {{#each featured}}
      <div class="card">
        <div class="card_image" style="background-image: url({{photo}})"></div>
        <h2 class="card_heading">{{heading}}</h2>
        <p class="card_info">{{info}}</p>
        <a class="card_link" href="{{linkUrl}}">{{linkText}}</a>
      </div>
      {{/each}}
    </main>

    
      <div class="form">
        {{#each actions}}
        <div class="form_content">
          <h2 class="form_title">{{heading}}</h2>
          <a class="form_text" href="{{url}}">{{text}}</a>
        </div>
        
    {{/each}}

      </div>
    

     <div class="page_block">
    <footer class="footer">
      <div>
        {{>logo }}
        <span class="footer_copyright">Copyright 2023-2024</span>
      </div>

      {{#each footer}}
      <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
      </div>
      {{/each}}
    </footer>