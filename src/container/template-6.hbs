<header class="header ">

      <div>
        {{>logo}}
      </div>


      <nav class="header_nav">
        <div class=" header_nav_right">
          {{>nav list=header}}
        </div>
      </nav>
    </header>

    <main class="main">
      <div class="info">
        <h1 class="info_title">{{info.title}}</h1>
        <p class="info_description">{{info.description}}</p>
        </div>

        {{#with form}}
          <form class="form">
            <div class="form-input_list">
              {{#each inputs}}
                <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" 
                id="form-input-{{id}}" />
              {{/each}}
            </div>

            <div class="form_checkbox">
              <input type="checkbox" name="{{checkbox_name}}" id="{{checkbox.name}}">
              <div></div>
              <label for="{{checkbox.name}}">{{checkbox.label}}</label>
            </div>
            <button type="submit" class="form_button">{{button}}</button>
            <p class="form_info">{{info}}</p>
          </form>
        {{/with}}
     </main>

     <div>
      {{#with updates}}
        <div class="updates">
          <h1 class="updates_title">{{title}}</h1>
          {{#each list}}
            <div class="upd">
              <strong class="upd_name">{{nickname}}</strong>
              <p class="upd_text">{{description}}</p>
            </div>
          {{/each}}
          {{#with show_all}}
            <a class="updates_link" href="{{url}}">{{text}}</a>
          {{/with}}
        </div>
        {{/with}}
     </div>

      {{#with expirience}}
      <div class="expirience_title">
        <h1>{{title}}</h1>
        <div class="new">{{badge}}</div>
      </div>
      <div class="expirience">
        {{#each list}}
          <div>
            <strong>{{name}}</strong>
            <p>{{details}}</p>
          </div>
        {{/each}}
        
     </div>
        {{/with}}

     <div class="page_block">
    <footer class="footer">
      <div>
        {{>logo }}
        <span class="footer_copyright">Copyright 2023-2024</span>
      </div>

      {{#each footer}}
      <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
      </div>
      {{/each}}
    </footer>